@model GetPhotoModel
@{
    ViewData["Title"] = "GetPhotoDataView";
}

@section Styles
{
    <link rel="stylesheet" href="/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}

@section Scripts
{
    <script src="/admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>
        $(function () {
            $('#Photos').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": "/Admin/Photo/GetPhotoData",

                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 1,
                        "render": function (data, type, row) {
                            return `<img src=${data} width='70px' height='70px'/>`;
                        }
                    }
                ]
            });
        });
    </script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Available Photos</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Photos</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">All Available Photos</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="Photos" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Member Id</th>
                                <th>Photo</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Member Id</th>
                                <th>Photo</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
